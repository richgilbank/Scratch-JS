.open-settings
  width 20px
  height 20px
  display inline-block
  vertical-align middle
  margin-right 10px
  padding 10px
  cursor pointer

  path
    fill #586e75

.settings
  perspective 500px
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  pointer-events none
  z-index 103
  display flex
  justify-content center
  font-size 14px

.settings__panel
  flex 0 0 auto
  align-self center
  background #fff
  width 40%
  height 60%
  min-width 400px
  left 30%
  top 20%
  opacity 0
  box-shadow 0 5px 20px rgba(200, 200, 200, 0.8)
  border 1px solid #ddd
  pointer-events none
  -webkit-transform scale(0.9) translateY(40px) rotateX(-20deg)
  transition all 200ms ease
  overflow auto

  @media (max-width: 500px)
    min-width 0
    width 80%
    height 80%
    left 10%
    top 10%

  @media (max-height: 450px)
    height 100%
    top 0

  .settings.is-active &
    pointer-events auto
    opacity 1
    transform scale(1) translateY(0) rotateX(0deg)

.settings__close-btn
  text-decoration none
  color #999
  display block
  position absolute
  right 15px
  top 17px
  font-size 18px
  line-height 17px
  padding 5px 7px
  border-radius 50%
  text-align center

  &:hover,
  &:active
    background #ccc
    color #fff

.settings__section
  padding 0 1em

.settings__content
  display flex

.settings-column
  flex 1 1 auto

.settings__option-container
  padding 3px
  margin-bottom 5px
  position relative

  input[type="radio"]
    position absolute

  span
    padding-left 25px
    display inline-block

.settings__spinner
  position absolute
  bottom 10px
  right 10px
  opacity 0
  display block
  width 24px
  height 24px
  border-radius 50%
  border 3px solid #3b89f3
  border-top-color transparent
  -webkit-animation spin 1s infinite linear
  -webkit-transition all 500ms ease

  &.is-active
    opacity 1
